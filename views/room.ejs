<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VideoChatApp</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
        const ROOM_ID = "<%= roomId %>";
    </script>
</head>

<body>
    <!-- <header> -->
        <div class="header">
            <div class="logo">
                <div class="icon">
                    <i class="fas fa-angle-left"></i>
                </div>
                <h3>Video Chat</h3>
            </div>
        </div>
    <!-- </header> -->


    <!-- <main> -->
        <div class="main"> 
        <!--For Videos View Side-->
        <div class="main_left">
            <!--For Videos-->
            <div class="video_group">
                <div id="video-grid">

                </div>
            </div>

            <!--For Options-->
            <div class="options">

                <div class="options_left">
                    <div id="stopVideo" class="options_button">
                        <i class="fas fa-video"></i>
                    </div>
                    <div id="muteButton" class="options_button">
                        <i class="fas fa-microphone"></i>
                    </div>
                    <div id="showChat" class="options_button">
                        <i class="fas fa-comment-dots"></i>
                    </div>
                </div>

                <div class="options_right">
                    <div id="inviteButton" class="options_button">
                        <i class="fas fa-user-plus"></i>
                    </div>
                </div>
            </div>
        </div>


        <!--For Chats View Side-->
        <div class="main_right">
            <div class="main_chat_window">
                <div class="messages">

                </div>
            </div>
            
            <div class="main_message_container">
                <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
                <div id="send" class="options_button">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
    <!-- </main> -->
</body>
<script src="script.js"></script>
</html>